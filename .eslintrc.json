{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "func-names": ["error", "never"],
        "indent": ["error", 4],
        "sort-vars": "error",
        "camelcase": "error",
        "no-trailing-spaces": "error",
        "prefer-destructuring": ["error", {
            "AssignmentExpression": {
                "array": false,
                "object": false
            }
        }],
        "max-len": ["error", { "code": 120 }]
    }
}
